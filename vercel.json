{
  "version": 2,
  "buildCommand": "npm install && cd server && npm install && cd .. && npm run build",
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/pagseguro/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 